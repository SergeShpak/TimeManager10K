@{
    ViewData["Title"] = "Home Page";
}

<script src="~/custom-scripts/timer-scripts.js"></script>
<script src="~/custom-scripts/timer-control-panel.js"></script>

<div class="container" id="timer">
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
                <div class="center-block" id="timer-display">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="row">
                            <p id="timer-task">This is the task</p>
                        </div>
                        <div class="row">
                            <p id="timer-clock"></p>
                        </div>
                    </div>
                </div>
        </div>
        <div class="row">
            <div class="text-center" id="timer-controls"> 
                <div class="btn-group-lg" role="group">
                    <input id="timer-start-btn" class="btn btn-default btn-timer" type="submit" value="Start" />
                    <input id ="timer-stop-btn" class="btn btn-default btn-timer" type="submit" value="Stop" />
                    <input id="timer-reset-btn" class="btn btn-danger btn-timer" type="submit" value="Reset" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="panel panel-default" id="timer-control-panel">
                <form class="form-horizontal" id="task-form-group">
                    <div class="form-group form-group-lg">
                        <div class="col-md-7">
                            <input type="text" class="form-control" id="task-input" placeholder="Task name">
                        </div>
                        <div class="col-md-3">
                            <input type="time" class="form-control" id="task-time-input" placeholder="hh:mm:ss">
                        </div>
                        <div class="col-md-2">
                            <input id="task-set-btn" class="btn btn-default btn-block btn-success" value="Set" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
